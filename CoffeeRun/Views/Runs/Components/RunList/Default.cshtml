@model IEnumerable<CoffeeRun.ViewModels.RunViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeToRun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Runner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.runStatus)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeToRun)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Runner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.runStatus)
                </td>
                @if (item.ableToModify)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RunId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.RunId">Delete</a>
                    </td>
                }
            <td>
                <a asp-action="Index" asp-controller="Orders" asp-route-id="@item.RunId">View Current Orders | </a>
                @if (item.TimeToRun > DateTime.Now)
                {
                    <a asp-action="MakeMeRunner" asp-controller="Runs" asp-route-id="@item.RunId">Make me the Runner | </a>
                }
                <a asp-action="MarkComplete" asp-controller="Runs" asp-route-id="@item.RunId">Mark as Complete</a>
            </td>
            </tr>
        }
    </tbody>
</table>